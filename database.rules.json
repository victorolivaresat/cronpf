
{
  "rules": {
    ".write": "auth != null",
    "users": {
      ".read": "auth != null",
      ".indexOn": ["email"],
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    },
    "projects": {
      ".read": "auth != null",
      ".indexOn": "ownerId",
      "$projectId": {
        ".read": "auth != null && (data.child('ownerId').val() === auth.uid || data.child('members').child(auth.uid).exists())",
        ".write": "auth != null && (data.child('ownerId').val() === auth.uid || data.child('members').child(auth.uid).exists() || (!data.exists() && newData.child('ownerId').val() === auth.uid))"
      }
    }
  }
}
